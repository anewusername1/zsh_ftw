startup_message off
shell -$SHELL
hardstatus on
hardstatus lastline '%H:  %-Lw%34>[%n*%f %t]%+Lw'
escape ^\\\
bindkey ^Q command
bindkey ^Z command
defnonblock on
defscrollback 1024
defflow off
termcapinfo xterm*|rxvt* hs:ts=\E]2;:fs=\007:ds=\E]2;8)\007
windowlist string "%3n %{= dd}%?%h%:%t%?%=%f%{-}"
caption    string "%?%F%{y}%?%3n %{= wk}%?%h%:%t%?%{-}"
activity "Activity in window %n (%t)^G^G"
bell_msg "Bell in window %n (%t)^G"

bind  K kill
bind  z stuff ^Z
bind  ` select 0
# Make sure that 256-colors work
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
#term "screen-256color"
defbce "on"
# Make scrolling work with Ctrl+A [
defscrollback 5000
# Fix scrolling in some terminals
termcapinfo xterm* ti@:te@
# fix 256-color problem when connecting from Putty:
#termcapinfo putty* XT
# add bottom line with list of windows
hardstatus alwayslastline '%{= B} %H %= %{= k}%-w%{+b G}%n*%t%{-b G}%{k}%+w %= %{c}%d %D %{M}%c '
# get rid of annoying flicker on tab completion
vbell off
# get rid of "splash screen"
startup_message off
termcapinfo * '' 'hs:ts=\E_:fs=\E\\:ds=\E_\E\\'

# set the titlebar in xterm sessions
termcapinfo xterm 'hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007'

# startup sessions
screen -t sh 0
screen -t irssi 1
select 0
